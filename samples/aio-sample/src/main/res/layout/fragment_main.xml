<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:stretchColumns="1"
    tools:context=".MainActivityFragment">

    <TableRow android:layout_marginBottom="@dimen/activity_vertical_margin">
        <TextView style="@style/TableHeaderColumn"
            android:text="@string/text_pin" />

        <TextView style="@style/TableHeaderColumn"
            android:text="@string/text_voltage"/>

        <TextView style="@style/TableHeaderColumn"
            android:text="@string/text_read" />
    </TableRow>

    <TableRow>
        <TextView style="@style/TableHeaderColumn"
            android:text="@string/text_aio1" />

        <RelativeLayout style="@style/VoltageWrapper">
            <TextView style="@style/VoltageTextView"
                android:id="@+id/voltage_text_aio1" />

            <ProgressBar style="@style/VoltageProgressBar"
                android:id="@+id/voltage_bar_aio1" />
        </RelativeLayout>

        <Button style="@style/ReadButton"
            android:id="@+id/btn_read_aio1" />
    </TableRow>

    <TableRow>
        <TextView style="@style/TableHeaderColumn"
            android:text="@string/text_aio2" />

        <RelativeLayout style="@style/VoltageWrapper">
            <TextView style="@style/VoltageTextView"
                android:id="@+id/voltage_text_aio2" />

            <ProgressBar style="@style/VoltageProgressBar"
                android:id="@+id/voltage_bar_aio2" />
        </RelativeLayout>

        <Button style="@style/ReadButton"
            android:id="@+id/btn_read_aio2" />
    </TableRow>

    <TableRow>
        <TextView style="@style/TableHeaderColumn"
            android:text="@string/text_aio3" />

        <RelativeLayout style="@style/VoltageWrapper">
            <TextView style="@style/VoltageTextView"
                android:id="@+id/voltage_text_aio3" />

            <ProgressBar style="@style/VoltageProgressBar"
                android:id="@+id/voltage_bar_aio3" />
        </RelativeLayout>

        <Button style="@style/ReadButton"
            android:id="@+id/btn_read_aio3" />
    </TableRow>

</TableLayout>
