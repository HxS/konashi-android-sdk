<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UzukiFragment">

    <Button
        android:id="@+id/setupAdxl345Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setup ADXL345" />

    <Button
        android:id="@+id/readAccelerometerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read accelerometer" />

    <TextView
        android:id="@+id/accelerometerResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer results" />

    <Button
        android:id="@+id/readTemperatureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read temperature" />

    <TextView
        android:id="@+id/temperatureResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature result" />

</LinearLayout>
